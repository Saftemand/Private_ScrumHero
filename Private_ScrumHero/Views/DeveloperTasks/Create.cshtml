@model Private_ScrumHero.ViewModels.DeveloperTaskViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DeveloperTask</h4>
        <hr />
        

        <div class="form-group">
            @Html.LabelFor(model => model.DeveloperTaskName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeveloperTaskName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DeveloperTaskName, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(m => m.UserStoryId, new { @Value = Model.UserStoryId})

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Details", "UserStories", new { Model.UserStoryId }, null)
</div>
