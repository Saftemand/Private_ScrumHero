@model IEnumerable<Private_ScrumHero.ViewModels.ProjectViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastModifiedAt)
        </th>
        <th>Options</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastModifiedAt)
        </td>
        <td>
            @Html.ActionLink("Backlog", "Index", "Backlogs", new { item.BacklogId }, null) |
            @Html.ActionLink("Edit", "Edit", new {id = item.ProjectId}) |
            @Html.ActionLink("Details", "Details", new {id = item.ProjectId}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.ProjectId})
        </td>
    </tr>
}

</table>
